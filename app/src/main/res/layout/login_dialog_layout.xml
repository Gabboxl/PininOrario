<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

    <EditText
            android:id="@+id/edit_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="username"
            android:hint="@string/username_hint"
            android:inputType="text" />

    <EditText
            android:id="@+id/edit_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_username"
            android:autofillHints="password"
            android:hint="@string/password_hint"
            android:inputType="textPassword" />

    <TextView
            android:id="@+id/infopswtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_password"
            android:drawablePadding="8dp"
            android:text="@string/info_login_dialog"
            app:drawableStartCompat="@drawable/ic_info_outline_black_24dp" />

    <TextView
            android:id="@+id/tempwarninglogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/infopswtext"
            android:paddingTop="16dp"
            android:drawablePadding="8dp"
            android:textColor="#bf5900"
            android:text="@string/warn_login_dialog"
            app:drawableStartCompat="@drawable/ic_round_warning_24" />

</RelativeLayout>